<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="njh.androidApp.scratchoffstats.MainActivity"
    android:orientation="vertical"
    android:background="#000">    

    <TextView android:id="@+id/spentID"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="25.0sp"
        android:text="@string/spentText"
        android:textColor="#f00"/>

    <TextView android:id="@+id/wonID"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25.0sp"
        android:text="@string/wonText"
        android:textColor="#0f0"/>
    
    <TextView android:id="@+id/ticketsID"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25.0sp"
        android:text="@string/ticketsText"
        android:textColor="#fff"/>
    
    <TextView android:id="@+id/netID"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25.0sp"
        android:text="@string/netText"
        android:textColor="#fff"/>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#999"/>    
   
    <EditText android:id="@+id/ticketValue"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="25.0sp"
        android:textColor="#fff"
        android:hint="@string/ticketValueEditText"
        android:inputType="number"/>
    

    <EditText android:id="@+id/ticketWin"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="25.0sp"
        android:textColor="#fff"
        android:hint="@string/ticketWinEditText"
        android:inputType="number"/>
    
    <Button android:id="@+id/buttonID"
        android:layout_gravity="bottom"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25.0sp"
        android:text="@string/buttonText" 
        android:textColor="#fff"
        android:onClick="addTicket"/>
    

</LinearLayout>
